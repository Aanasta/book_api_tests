  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "publication": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "pages": {
